<%# locals: (business:, property_group:) %>

<%= errable_form_with model: [business, property_group], class: "form" do |form| %>
  <div class="form__group">
    <%= form.label :name, class: "form__label" %>
    <%= form.text_field :name, class: "form__input" %>
    <%= form.error :name, "form__error" %>
  </div>

  <footer class="form__footer">
    <%= link_to "Cancel",
            (
              if property_group.persisted?
                [business, property_group]
              else
                business_property_groups_path(business)
              end
            ),
            class: "button" %>

    <%= form.submit "Save", class: "button button--action" %>
  </footer>
<% end %>
