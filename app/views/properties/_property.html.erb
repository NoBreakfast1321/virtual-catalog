<%= turbo_frame_tag property do %>
  <div class="card mb-6">
    <header class="card__header">
      <h3 class="card__heading">Property</h3>
    </header>
    <div class="card__body">
      <dl id="<%= dom_id property %>" class="description-list">
        <div class="description-list__item">
          <dt class="description-list__term">
            Name
          </dt>
          <dd class="description-list__definition">
            <%= property.name %>
          </dd>
        </div>
      </dl>
    </div>

    <footer class="card__footer card__footer--end">
      <%= button_to "Destroy property", [ @business, @product, property.property_group, property ], method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "button button--danger" %>
      <%= link_to "Edit property", edit_business_product_property_group_property_path(@business, @product, property.property_group, property), data: { turbo_frame: dom_id(property) }, class: "button" %>
    </footer>
  </div>
<% end %>
