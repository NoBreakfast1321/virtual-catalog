<%# locals: (catalog:, property_group:, property:) %>

<%= turbo_frame_tag turbo_frame_id(property) do %>
  <dl class="description-list">
    <div class="description-list__item">
      <dt class="description-list__term"><%= property.name %></dt>
      <dd
        class="description-list__definition flex items-center justify-end gap-2"
      >
        <%= link_to "Edit",
                edit_catalog_property_group_property_path(
                  catalog,
                  property_group,
                  property,
                ),
                data: {
                  turbo_frame: turbo_frame_id(property),
                },
                class: "button" %>

        <%= button_to "Destroy",
                  [catalog, property_group, property],
                  method: :delete,
                  data: {
                    turbo_confirm: "Are you sure you want to destroy this property?",
                  },
                  class: "button button--danger" %>
      </dd>
    </div>
  </dl>
<% end %>
