<%= turbo_frame_tag option_value do %>
  <p>
    <strong>Visible:</strong>
    <%= option_value.visible? ? "Yes" : "No" %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= option_value.name %>
  </p>

  <p>
    <strong>Price variation:</strong>
    <%= option_value.price_variation %>
  </p>

  <%= link_to "Edit", edit_product_option_type_option_value_path(@product, option_value.option_type, option_value), data: { turbo_frame: dom_id(option_value) } %>
  <%= button_to "Destroy", product_option_type_option_value_path(@product, option_value.option_type, option_value), method: :delete, data: { turbo_confirm: "Are you sure?" } %>
<% end %>
