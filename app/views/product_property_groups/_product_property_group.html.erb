<%# locals: (business:, product:, product_property_group:) %>

<% property_group = product_property_group.property_group %>

<%= turbo_frame_tag turbo_frame_id(product_property_group) do %>
  <div class="mb-4 flex items-center justify-between">
    <h2 class="card__heading mb-2">
      <%= link_to property_group.name, [business, property_group] %>
    </h2>

    <%= button_to "Destroy",
              [business, product, product_property_group],
              method: :delete,
              data: {
                turbo_confirm:
                  "Are you sure you want to destroy this property group?",
              },
              class: "button button--danger" %>
  </div>
<% end %>
