<dl id="<%= dom_id product %>" class="description-list">
  <div class="description-list__item">
    <dt class="description-list__term">
      Visible?
    </dt>
    <dd class="description-list__definition">
      <%= product.visible? ? "Yes" : "No" %>
    </dd>
  </div>

  <div class="description-list__item">
    <dt class="description-list__term">
      Featured?
    </dt>
    <dd class="description-list__definition">
      <%= product.featured? ? "Yes" : "No" %>
    </dd>
  </div>

  <div class="description-list__item">
    <dt class="description-list__term">
      Code
    </dt>
    <dd class="description-list__definition">
      <%= product.code %>
    </dd>
  </div>

  <div class="description-list__item">
    <dt class="description-list__term">
      Name
    </dt>
    <dd class="description-list__definition">
      <%= product.name %>
    </dd>
  </div>

  <div class="description-list__item">
    <dt class="description-list__term">
      Description
    </dt>
    <dd class="description-list__definition">
      <%= product.description %>
    </dd>
  </div>

  <div class="description-list__item">
    <dt class="description-list__term">
      Price
    </dt>
    <dd class="description-list__definition">
      <%= product.price %>
    </dd>
  </div>

  <div class="description-list__item">
    <dt class="description-list__term">
      Sale price
    </dt>
    <dd class="description-list__definition">
      <%= product.sale_price %>
    </dd>
  </div>

  <div class="description-list__item">
    <dt class="description-list__term">
      Sale starts at
    </dt>
    <dd class="description-list__definition">
      <%= product.sale_starts_at %>
    </dd>
  </div>

  <div class="description-list__item">
    <dt class="description-list__term">
      Available from
    </dt>
    <dd class="description-list__definition">
      <%= product.available_from %>
    </dd>
  </div>

  <div class="description-list__item">
    <dt class="description-list__term">
      Available until
    </dt>
    <dd class="description-list__definition">
      <%= product.available_until %>
    </dd>
  </div>

  <div class="description-list__item">
    <dt class="description-list__term">
      Categories
    </dt>
    <dd class="description-list__definition">
      <%= safe_join(product.categories.map { |category| link_to category.name, category }, ", ") %>
    </dd>
  </div>
</div>
