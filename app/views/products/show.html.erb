<% content_for :title, @product.name %>

<section class="card">
  <header class="card__header card__header--with-actions">
    <div>
      <h2 class="card__heading">
        Product Details
      </h2>
      <p class="card__description">
        Lorem ipsum dolor, sit amet consectetur adipisicing elit. Maiores in soluta eius, exercitationem et alias quae.
      </p>
    </div>
    <div class="card__actions">
      <%= link_to "Edit product", edit_business_product_path(@business, @product), class: "button button--action" %>
    </div>
  </header>

  <div class="card__body">
    <%= render partial: "products/product", locals: { product: @product } %>
  </div>

  <footer class="card__footer">
    <div class="card__footer--end">
      <%= link_to "Back to products", business_products_path(@business), class: "button" %>
      <%= button_to "Destroy product", [ @business, @product ], method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "button button--danger" %>
    </div>
  </footer>
</section>

<div>
  <section class="card">
    <header class="card__header">
      <h2 class="card__heading">
        Product Variants
      </h2>
      <p class="card__description">
        Lorem ipsum dolor, sit amet consectetur adipisicing elit. Maiores in soluta eius, exercitationem et alias quae.
      </p>
    </header>

    <div class="card__body">
      <%= turbo_frame_tag :variants do %>
        <%= render partial: "products/variants", locals: { product: @product } %>
      <% end %>
    </div>
  </section>
</div>

<section class="card">
  <header class="card__header card__header--with-actions">
    <div>
      <h2 class="card__heading">
        Product Options
      </h2>
      <p class="card__description">
        Lorem ipsum dolor, sit amet consectetur adipisicing elit. Maiores in soluta eius, exercitationem et alias quae.
      </p>
    </div>
    <div class="card__actions">
      <%= link_to "New option group", new_business_product_option_group_path(@business, @product), data: { turbo_frame: dom_id(OptionGroup.new) }, class: "button button--action" %>
    </div>
  </header>

  <div class="card__body">
    <%= turbo_frame_tag OptionGroup.new %>

    <%= turbo_frame_tag :option_groups do %>
      <% @product.option_groups.each do |option_group| %>
        <%= render option_group %>
      <% end %>
    <% end %>
  </div>
</section>

