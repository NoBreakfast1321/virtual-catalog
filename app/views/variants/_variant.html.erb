<%= turbo_frame_tag turbo_frame_id(variant) do %>
  <div class="card mb-6">
    <div class="card__body">
      <dl id="<%= dom_id variant %>" class="description-list">
        <div class="description-list__item">
          <dt class="description-list__term">
            Visible?
          </dt>
          <dd class="description-list__definition">
            <%= variant.visible? ? "Yes" : "No" %>
          </dd>
        </div>

        <div class="description-list__item">
          <dt class="description-list__term">
            Code
          </dt>
          <dd class="description-list__definition">
            <%= variant.code %>
          </dd>
        </div>

        <div class="description-list__item">
          <dt class="description-list__term">
            Price
          </dt>
          <dd class="description-list__definition">
            <%= variant.price %>
          </dd>
        </div>

        <div class="description-list__item">
          <dt class="description-list__term">
            Stock quantity
          </dt>
          <dd class="description-list__definition">
            <%= variant.stock_quantity %>
          </dd>
        </div>

        <div class="description-list__item">
          <dt class="description-list__term">
            Properties
          </dt>
          <dd class="description-list__definition">
            <%= safe_join(variant.properties.map { |property| property.name }, ", ") %>
          </dd>
        </div>
      </dl>
    </div>

    <footer class="card__footer card__footer--end">
      <%= button_to "Destroy variant", [ @business, @product, variant ], method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "button button--danger" %>
      <%= link_to "Edit variant", edit_business_product_variant_path(@business, @product, variant), data: { turbo_frame: turbo_frame_id(variant) }, class: "button" %>
    </footer>
  </div>
<% end %>
